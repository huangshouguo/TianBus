<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_nav_header_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_nav_header"
        android:layout_width="@dimen/nav_header_img_size"
        android:layout_height="@dimen/nav_header_img_size"
        android:layout_gravity="center"
        android:src="@drawable/user"/>

    <TextView
        android:id="@+id/text_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:paddingBottom="@dimen/default_left_gap"
        android:textSize="@dimen/nav_header_text_font_size"/>
</FrameLayout>