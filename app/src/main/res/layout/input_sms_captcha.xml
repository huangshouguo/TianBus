<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:orientation="horizontal">

    <!--sms captcha-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text_sms_captcha"
            style="@style/EditTextIconStyle"
            android:drawableLeft="@drawable/ic_sms"
            android:hint="@string/text_hint_input_sms_captcha"
            android:inputType="number" />
    </LinearLayout>

    <!--timmer-->
    <Button
        android:id="@+id/btn_sms_captch_timmer"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_background_warn"
        android:text="点击发送"
        android:textSize="@dimen/button_text_font_size"
        android:textColor="@color/colorBtnTextNormal" />
</LinearLayout>