<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_forum_reply_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/default_left_gap"
    android:paddingRight="@dimen/default_right_gap"
    android:paddingTop="10dp">

    <!--info-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_forum_reply_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="12楼"
            android:textSize="@dimen/ft10" />

        <TextView
            android:id="@+id/text_forum_reply_item_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="151****1234"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ft10" />

        <TextView
            android:id="@+id/text_forum_reply_item_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="2015-10-20 12:11:15"
            android:textSize="@dimen/ft10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="回复:"
            android:textSize="@dimen/ft10" />

        <TextView
            android:id="@+id/text_forum_reply_item_bizId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="151****1234"
            android:textSize="@dimen/ft10" />
    </LinearLayout>

    <!--content-->
    <TextView
        android:id="@+id/text_forum_reply_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1222222"
        android:textColor="@color/colorTitleText"
        android:textSize="@dimen/ft14" />
</LinearLayout>