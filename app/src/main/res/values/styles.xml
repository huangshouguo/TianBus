<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item name="colorPrimary">@color/colorPrimary</item>-->
    <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.OverlabSystemBar" parent="Base.AppTheme"/>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ButtonTheme.Radius" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_left_gap</item>
        <item name="android:layout_marginRight">@dimen/default_right_gap</item>
        <item name="android:background">@drawable/button_background_radius</item>
        <item name="android:textSize">@dimen/button_text_font_size</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="ButtonTheme.White" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/button_white_text_font_size</item>
        <item name="android:textColor">@drawable/button_white_text_color</item>
    </style>

    <style name="BaseEditTextStyle" parent="AppTheme">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/default_left_gap</item>
        <item name="android:paddingRight">@dimen/default_right_gap</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textColorHint">@color/colorInputHintText</item>
        <item name="android:textSize">@dimen/input_text_font_size</item>
    </style>

    <style name="EditTextIconStyle" parent="EditTextIconStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/default_left_gap</item>
        <item name="android:paddingRight">@dimen/default_right_gap</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textColorHint">@color/colorInputHintText</item>
        <item name="android:textSize">@dimen/input_text_font_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/icon_content_padding</item>
    </style>

    <style name="TextRemainderStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_left_gap</item>
        <item name="android:textSize">@dimen/ft14</item>
        <item name="android:textColor">@color/colorTextRemainder</item>
    </style>

    <style name="IconTextVerticalStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/ft10</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="ItemTitleStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_left_gap</item>
        <item name="android:paddingRight">@dimen/default_right_gap</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/colorBackgroundDark</item>
        <item name="android:textSize">@dimen/ft16</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="ButtonTheme.Next" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">@dimen/default_left_gap</item>
        <item name="android:paddingRight">@dimen/default_right_gap</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawableRight">@drawable/ic_next</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/colorContentText</item>
        <item name="android:textSize">@dimen/ft14</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListViewTheme" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:divider">@color/colorSeparatorLine</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
</resources>
